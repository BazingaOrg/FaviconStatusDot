{
  "name": "favicon-status",
  "version": "1.0.0",
  "description": "一个用于动态更新网站 favicon 状态的轻量级库",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "favicon",
    "status",
    "browser",
    "icon",
    "vue",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BazingaOrg/favicon-status"
  },
  "bugs": {
    "url": "https://github.com/BazingaOrg/favicon-status/issues"
  },
  "homepage": "https://github.com/BazingaOrg/favicon-status#readme",
  "author": "Bazinga",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.0",
    "terser": "^5.4.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.0",
    "vite-plugin-dts": "^2.3.0",
    "vue": "^3.4.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
